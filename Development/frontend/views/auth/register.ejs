<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/register.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <%- include('../partials/navbar') %>
    <div class="main-container">
      <div class="container-register">
        <div class="title">Registration</div>
        <p id="messages"><%= registerMessage %></p>
        <div class="content">
          <!-- <form onsubmit="return validation()" action="/register" method="POST"> -->
          <form action="/register" method="POST">
            <div class="user-details">
              <div class="input-box">
                <span class="details">UserName</span>
                <input
                  type="text"
                  name="username"
                  id="username"
                  placeholder="Enter your name"
                />
                <span
                  id="usernameerror"
                  class="text-danger font-weight-bold"
                ></span>
              </div>
              <div class="input-box">
                <span class="details">Email ID</span>
                <input
                  type="email"
                  name="email"
                  id="email"
                  placeholder="Enter your email"
                />
                <span
                  id="emailerror"
                  class="text-danger font-weight-bold"
                ></span>
              </div>
              <div class="input-box">
                <span class="details">Age</span>
                <input
                  type="number"
                  name="age"
                  id="age"
                  placeholder="Enter your age"
                />
              </div>
              <div class="input-box">
                <span class="details">Institute</span>
                <input
                  type="text"
                  name="institute"
                  id="institute"
                  placeholder="Enter your Institute/University"
                />
              </div>
              <div class="input-box">
                <span class="details">Password</span>
                <input
                  type="password"
                  name="password"
                  id="password"
                  placeholder="Enter password"
                />
                <span
                  id="passworderror"
                  class="text-danger font-weight-bold"
                ></span>
              </div>
              <div class="input-box">
                <span class="details">Confirm Password</span>
                <input
                  type="password"
                  name="confirmedPassword"
                  id="password"
                  placeholder="Enter confirm password"
                />
                <span
                  id="confirmpassworderror"
                  class="text-danger font-weight-bold"
                ></span>
              </div>
            </div>
            <div class="button">
              <input type="submit" value="Register" />
            </div>
          </form>
        </div>
        <div class="bottom">
          <p>Already have an account! <a href="/login">Login</a></p>
        </div>
      </div>

      <div class="student-image">
        <img src="/images/login.jpg" alt="No image" />
      </div>
    </div>
    <%- include('../partials/footer') %>
    <script type="text/javascript">
      function validation() {
        var username = document.getElementById("username").value;
        var email = document.getElementById("email").value;
        var password = document.getElementById("password").value;

        var usercheck = /^[A-Za-z. ]{3,20}$/;
        var passwordcheck =
          /^(?=.*[0-9])(?=.*[!@#$%^&*])[a-zA-Z0-9!@#$%^&*]{8,16}$/;
        var emailcheck = /^[A-Za-z_]{3,}@[A-Za-z]{3,}[.]{1}[A-Za-z.]{2,6}$/;

        if (usercheck.test(username)) {
          document.getElementById("usernameerror").innerHTML = "";
        } else {
          document.getElementById("usernameerror").innerHTML =
            "*Username is Invalid";
          return false;
        }

        if (emailcheck.test(email)) {
          document.getElementById("emailerror").innerHTML = "";
        } else {
          document.getElementById("emailerror").innerHTML = "*Email is Invalid";
          return false;
        }

        if (passwordcheck.test(password)) {
          document.getElementById("passworderror").innerHTML = "";
        } else {
          document.getElementById("passworderror").innerHTML =
            "*Password is Invalid";
          return false;
        }
      }
    </script>
  </body>
</html>
